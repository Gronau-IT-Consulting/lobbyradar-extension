{
	"name": "Lobbyradar",
	"author": "mdt",
	"version": "0.1",
	"manifest_version": 2,
	"description": "Discover Lobby Networks",
	"background": {
		"scripts": [
			"background.js",
			"underscore.js",
			"bg_search.js",
			"bg_hitcount.js",
			"jquery.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"exclude_matches": [
				"*://lobbyradar.opendatacloud.de/*"
			],
			"js": [
				"BabelExt.js",
				"jquery.js",
				"jquery_highlight.js",
				"jquery.tooltipster.min.js",
				"fg_page.js"
			],
			"css": [
				"style.css",
				"tooltipster.css"
			],
			"run_at": "document_idle"
		}
	],
	"permissions": [
		"*://*/*",
		"contextMenus",
		"tabs",
		"history",
		"notifications",
		"storage"
	],
	"icons": {
		"38": "lobbyradar-38.png",
		"128": "lobbyradar-128.png"
	},
	"browser_action": {
		"default_icon": {
			"38": "lobbyradar-38.png",
			"128": "lobbyradar-128.png"
		},
		"default_popup": "popup/popup.html"
	},
	"options_page": "options.html"
}
